# =============================================================================
# WEB3 AUTHENTICATION CONFIGURATION
# =============================================================================

# Solana Network Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# Token Configuration
TOKEN_MINT_ADDRESS=
MIN_TOKEN_BALANCE=100000
TOKEN_DECIMALS=9

# Web3 Authentication Settings
WEB3_SESSION_LIFETIME=10080
WEB3_BALANCE_CACHE_DURATION=30
WEB3_BALANCE_RATE_LIMIT=10
WEB3_BALANCE_RATE_DECAY=1
WEB3_AUTO_CONNECT=true
WEB3_REMEMBER_CONNECTION=true

# Security Settings (Development Only)
WEB3_DISABLE_SIGNATURE_VERIFICATION=false

# Solana Connection Settings
SOLANA_TIMEOUT=10
SOLANA_RETRY_ATTEMPTS=3
SOLANA_RETRY_DELAY=1000

# Solana Rate Limiting
SOLANA_RATE_LIMITING_ENABLED=true
SOLANA_MAX_REQUESTS_PER_MINUTE=100
SOLANA_BURST_LIMIT=20

# Solana Caching
SOLANA_CACHE_ENABLED=true
SOLANA_CACHE_TTL=30
SOLANA_BALANCE_CACHE_TTL=30
SOLANA_TOKEN_INFO_CACHE_TTL=3600

# Solana Logging
SOLANA_LOGGING_ENABLED=true
SOLANA_LOG_RPC_CALLS=false
SOLANA_LOG_ERRORS_ONLY=false
SOLANA_LOG_CHANNEL=single

# Solana SSL Verification (Windows compatibility)
SOLANA_VERIFY_SSL=false

# Broadcasting Configuration (for real-time updates)
REVERB_APP_ID=1
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Reverb Server Configuration
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_SERVER_PATH=
